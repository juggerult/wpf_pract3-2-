<UserControl x:Class="wpf_pract3_2_.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:wpf_pract3_2_"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White" Margin="0,0,504,0" Height="450" VerticalAlignment="Center">
        <TextBox x:Name="txtMessage" 
             FontSize="14"  FontFamily="Segoe UI"  HorizontalAlignment="Left"
             VerticalAlignment="Top" Margin="51,189,0,0"
             Width="172" Height="36" TextAlignment="Center"
             BorderBrush="Blue" BorderThickness="2"/>

        <Button x:Name="btnAction" Content="Click me)"
            Width="120"  Height="35"  HorizontalAlignment="Left" VerticalAlignment="Bottom"
            Margin="77,0,0,157"  Background="Blue" Foreground="White"
            FontWeight="Bold"  Click="btnAction_Click"/>
    </Grid>
</UserControl>

